{
  "manifest_version": 2,

  "name": "Subspedia",
  "options_page": "settings/settings.html",
  "description": "Subspedia ti permette di restare sempre aggiornato sulle tue serie preferite di Subspedia.tv!",
  "version": "1.1",

  "permissions": [
  "tabs", 
  "storage",
  "notifications",
  "http://www.subspedia.tv/*",
  "http://subspedia.tv/*"
  ],

  "background": {
    "scripts": [
      "library/jquery-2.2.3.min.js",
      "js/notification.js",
      "js/background.js"
    ],
      "persistent": true
  },

  "icons": { "16": "img/16x16.png",
           "48": "img/48x48.png",
          "128": "img/128x128.png" },

  "browser_action": {
    "default_icon": "img/48x48.png",
    "default_popup": "popup/myserie.html"
  }
}